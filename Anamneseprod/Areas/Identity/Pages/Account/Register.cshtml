@page
@model RegisterModel


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-primary">Register</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account.</h3>
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <!-- Gender -->
                    <div class="form-floating mb-3 col-md-6">
                        <select required asp-for="Input.Gender" class="form-select">
                            <option disabled selected value="">Bitte auswählen</option>
                            <option value="Male">Männlich</option>
                            <option value="Female">Weiblich</option>
                            <option value="Other">Divers</option>
                        </select>
                        <label asp-for="Input.Gender" class="ms-2 text-muted">Geschlecht</label>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                    <!-- NameFamily -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.NameFamily" class="form-control" placeholder="Nachname" />
                        <label asp-for="Input.NameFamily" class="ms-2 text-muted">Nachname</label>
                        <span asp-validation-for="Input.NameFamily" class="text-danger"></span>
                    </div>

                    <!-- NameGiven -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.NameGiven" class="form-control" placeholder="Vorname" />
                        <label asp-for="Input.NameGiven" class="ms-2 text-muted">Vorname</label>
                        <span asp-validation-for="Input.NameGiven" class="text-danger"></span>
                    </div>
                    <!-- Birthdate -->
                    <div class="form-floating mb-3 col-md-6">
                        <input type="date"  asp-for="Input.Birthdate" class="form-control" placeholder="Geburtsdatum" />
                        <label asp-for="Input.Birthdate" class="ms-2 text-muted">Geburtsdatum</label>
                        <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
                    </div>
                    <!-- PhoneNumber -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefonnummer" />
                        <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Telefonnummer</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <!-- AddressLine -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.AddressLine" class="form-control" placeholder="Adresse" />
                        <label asp-for="Input.AddressLine" class="ms-2 text-muted">Adresse</label>
                        <span asp-validation-for="Input.AddressLine" class="text-danger"></span>
                    </div>

                    <!-- AddressCity -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.AddressCity" class="form-control" placeholder="Stadt" />
                        <label asp-for="Input.AddressCity" class="ms-2 text-muted">Stadt</label>
                        <span asp-validation-for="Input.AddressCity" class="text-danger"></span>
                    </div>

                    <!-- AddressPostalCode -->
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.AddressPostalCode" class="form-control" placeholder="Postleitzahl" />
                        <label asp-for="Input.AddressPostalCode" class="ms-2 text-muted">Postleitzahl</label>
                        <span asp-validation-for="Input.AddressPostalCode" class="text-danger"></span>
                    </div>

                   

                    <div class="form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-select Role-</option>
                        </select>

                    </div>
                    <div class="col-md-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                   
                </form>
            </div>
