@model Question

<h1>Neue Frage erstellen</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Frage</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Multichoice">Mehrfachauswahl</label>
        <input asp-for="Multichoice" type="checkbox" class="form-control" />
    </div>
    <div class="form-group">
        <label>Antworten</label>
        <div id="answers-container">
            <input type="text" name="Answers[0].Value" class="form-control mb-2" />
        </div>
        <button type="button" id="add-answer" class="btn btn-secondary">Weitere Antwort hinzufügen</button>
    </div>
    <button type="submit" class="btn btn-primary">Erstellen</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            var answersCount = 1;
            $("#add-answer").click(function () {
                var newAnswer = `<input type="text" name="Answers[${answersCount}].Value" class="form-control mb-2" />`;
                $("#answers-container").append(newAnswer);
                answersCount++;
            });
        });
    </script>
}
